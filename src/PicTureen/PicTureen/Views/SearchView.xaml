    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0"
                 Text="{Binding Path=SearchString}" />

        <TreeView Name="tvSearchParameters" Grid.Row="1">
            <TreeView.Resources>
                <Style x:Key="TreeViewItemFocusVisual">
                    <Setter Property="Control.Template">
                        <Setter.Value>
                            <ControlTemplate>
                                <Border>
                                    <Rectangle Margin="0,0,0,0"
                                         StrokeThickness="5"
                                         Stroke="Black"
                                         StrokeDashArray="1 2"
                                         Opacity="0"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>

                <Style TargetType="{x:Type TreeViewItem}">
                    <Setter Property="FocusVisualStyle" Value="{StaticResource TreeViewItemFocusVisual}"/>
                    <Setter Property="HeaderTemplate">
                        <Setter.Value>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox Name="chk" Margin="2" Tag="{Binding}" >
                                    </CheckBox>
                                    <TextBlock Text="{Binding}"></TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TreeView.Resources>

            <TreeViewItem Header="Name" 
                          IsExpanded="False"
                          x:Name="NameItem">
             
                <TreeViewItem Header="Fullname only"></TreeViewItem>
                <TreeViewItem Header="Contains"></TreeViewItem>
                <TreeViewItem Header="Not contains"></TreeViewItem>
            </TreeViewItem>

            <TreeViewItem Header="Tags"  IsExpanded="False">
                <TreeViewItem Header="Full word only"></TreeViewItem>
                <TreeViewItem Header="Contains"></TreeViewItem>
                <TreeViewItem Header="Not contains"></TreeViewItem>
                <TreeViewItem Header="Without tags"></TreeViewItem>
            </TreeViewItem>

            <TreeViewItem Header="Desciption"  IsExpanded="False">
                <TreeViewItem Header="Full word only"></TreeViewItem>
                <TreeViewItem Header="Contains"></TreeViewItem>
                <TreeViewItem Header="Not contains"></TreeViewItem>
                <TreeViewItem Header="Without description"></TreeViewItem>
            </TreeViewItem>
            <TreeViewItem Header="Rating"  IsExpanded="False">
                <TreeViewItem Header="Without rating"></TreeViewItem>
                <TreeViewItem Header="1"></TreeViewItem>
                <TreeViewItem Header="2"></TreeViewItem>
                <TreeViewItem Header="3"></TreeViewItem>
                <TreeViewItem Header="4"></TreeViewItem>
                <TreeViewItem Header="5"></TreeViewItem>

              
            </TreeViewItem>
            
        </TreeView>

        <Grid x:Name="DimensionsGrid" Row="3"
                VerticalAlignment="Bottom">
            <Grid.Style>
                <Style>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ShowDimensions}"
                                     Value="true">
                            <Setter Property="Grid.Visibility"
                                    Value="Visible" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding ShowDimensions}"
                                     Value="false">
                            <Setter Property="Grid.Visibility"
                                    Value="Collapsed" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>


            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="83*" />
                <ColumnDefinition Width="100*" />
                <ColumnDefinition Width="100*" />
            </Grid.ColumnDefinitions>

            <Label Grid.Row="0" Grid.Column="0" Content="Width:" Grid.ColumnSpan="2" />
            <Label Grid.Row="1" Grid.Column="0" Content="Height:" Grid.ColumnSpan="2" />

            <TextBox Grid.Column="1" Grid.Row="0" Margin="3"
                     Text="{Binding Path=SearchMinWidth}" />
            <TextBox Grid.Column="1" Grid.Row="1" Margin="3"
                     Text="{Binding Path=SearchMinHeight}" />
            <TextBox Grid.Column="2" Grid.Row="0" Margin="3"
                     Text="{Binding Path=SearchMaxWidth}" />
            <TextBox Grid.Column="2" Grid.Row="1" Margin="3"
                     Text="{Binding Path=SearchMaxHeight}" />
        </Grid>
        <Button x:Name="Dimensions"
                HorizontalContentAlignment="Left"
                Grid.Row="2"
                Height="Auto"
                VerticalAlignment="Top"
                Content="           Dimensions"
                Command="{Binding ShowHideDimensionsCommand}" />
        
       
    </Grid>
</UserControl>